<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Views.FinalizarView"
             Title="FinalizarView">
    <StackLayout BackgroundColor="#7c1caa">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding RegresarCommand}"></TapGestureRecognizer>
        </StackLayout.GestureRecognizers>
        
        <Image Source="logo" 
               Margin="40,120,40,40"></Image>

        <Label TextColor="#feb930" 
               Margin="40,80,40,80" 
               FontSize="20" 
               HorizontalTextAlignment="Center">Gracias por ayudarnos a mejorar nuestro servicio.</Label>
    </StackLayout>
</ContentPage>