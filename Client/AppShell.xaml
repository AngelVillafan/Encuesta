<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Client"
    xmlns:views="clr-namespace:Client.Views"
    Shell.FlyoutBehavior="Disabled" NavigationPage.HasNavigationBar="False"  Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:InicioView}"
        Route="MainPage" />

    <ShellContent Route="Encuesta">
        <views:EncuestaView></views:EncuestaView>
    </ShellContent>

    <ShellContent Route="Fin">
        <views:FinalizarView></views:FinalizarView>
    </ShellContent>
</Shell>
